{
    "extends": "../tslint.json",
    "rules": {
        "no-inferrable-types": [true, "ignore-params", "ignore-properties"],
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
